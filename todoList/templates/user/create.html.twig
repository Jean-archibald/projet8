{% extends 'base.html.twig' %}

{% form_theme formUser 'bootstrap_4_layout.html.twig' %}

{% block header_title %}
    {%  if editMode %}
        <h1>Modifier un utilisateur</h1>
    {%  else  %}
        <h1>Cr√©er un utilisateur</h1>
    {%  endif  %}
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">

        {{ form_start(formUser) }}

        {{ form_row(formUser.username) }}
        {{ form_row(formUser.email) }}
        {{ form_row(formUser.password) }}
        {{ form_row(formUser.roles.0) }}

        <button type="submit" class="btn btn-success">
            {%  if editMode %}
                Enregistrer les modifications
            {%  else  %}
                Ajouter l'utilisateur
            {%  endif  %}
        </button>
        {{  form_end(formUser, {'render_rest': false}) }}


    </div>
{% endblock %}
